<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".NewAppointment">

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="360dp"
        android:layout_height="600dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="26dp"
        android:background="@drawable/custom_button1"
        android:backgroundTint="@color/appointlayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnback3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/background"
        android:src="@drawable/backicon"
        android:tint="@color/fontcolor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/backicon" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/itim"
        android:text="NEW APPOINTMENT"
        android:textColor="@color/fontcolor"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/appoint2" />

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="259dp"
        android:layout_height="302dp"
        android:layout_marginTop="180dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/edtName2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text"
            android:ems="10"
            android:fontFamily="@font/itim"
            android:hint="@string/hntpetname"
            android:inputType="text"
            android:paddingLeft="40dp"
            android:textColorHint="@color/hintcolor" />

        <EditText
            android:id="@+id/edtCondition"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text"
            android:ems="10"
            android:fontFamily="@font/itim"
            android:hint="@string/hntcondition"
            android:inputType="text"
            android:paddingLeft="40dp"
            android:textColorHint="@color/hintcolor" />

        <EditText
            android:id="@+id/edtDate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_text"
            android:ems="10"
            android:fontFamily="@font/itim"
            android:hint="dd/mm/yy"
            android:inputType="date"
            android:paddingLeft="45dp"
            android:textColorHint="@color/hintcolor" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView31"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView32"
        app:srcCompat="@drawable/dateicon" />

    <ImageView
        android:id="@+id/imageView32"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView33"
        app:srcCompat="@drawable/searchicon" />

    <ImageView
        android:id="@+id/imageView33"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="190dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nameicon" />

    <Button
        android:id="@+id/btnfind"
        android:layout_width="252dp"
        android:layout_height="44dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="340dp"
        android:layout_marginEnd="76dp"
        android:background="@drawable/custom_button2"
        android:fontFamily="@font/itim"
        android:text="Find Care"
        android:textAllCaps="false"
        android:textColor="@color/fontcolor"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>